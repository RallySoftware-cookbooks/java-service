# -*- mode: ruby -*-
Bluepill.application("<%= @name %>") do |app|
  app.process("<%= @name %>") do |process|
    process.start_command = "java -server -cp <%= @classpath %> <%= @system_properites %> <%= @jvm_options %> <%= @main_class %> <%= @args %>"
    process.pid_file = "/tmp/<%= @name %>.pid"
    process.uid = "<%= @user %>"
    process.gid = "<%= @user %>"
    process.daemonize = true  
  end
end