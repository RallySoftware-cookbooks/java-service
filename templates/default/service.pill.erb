# -*- mode: ruby -*-
Bluepill.application("<%= @name %>") do |app|
  app.process("<%= @name %>") do |process|
    process.working_dir = "<%= @working_dir %>"
    process.start_command = "<%= @java_command %>"
    process.pid_file = "/tmp/<%= @name %>.pid"
    process.uid = "<%= @user %>"
    process.gid = "<%= @user %>"
    process.daemonize = true
  end
end
